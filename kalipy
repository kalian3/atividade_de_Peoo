#10
import turtle

turtle = turtle.Turtle()

for _ in range(4):
    turtle.shape('arrow')
    turtle.color('red')
    turtle.forward(100)
    turtle.right(90)
turtle.up()
turtle.fd(100)
turtle.forward(150)
turtle.left(90)
turtle.bk(20)
turtle.down()
for _ in range(4):
   turtle.shape('circle')
   turtle.color('pink')
   turtle.left(90)
   turtle.forward(100)
turtle.up()

turtle.fd(150)
turtle.left(90)
turtle.bk(20)
turtle.down()
for _ in range(4):
   turtle.shape('square')
   turtle.color('orange')
   turtle.forward(100)
   turtle.left(90)
turtle.up()
turtle.fd(20)
turtle.left(90)
turtle.bk(20)
turtle.down()
for _ in range(4):
   turtle.shape('turtle')
   turtle.color('blue')
   turtle.right(90)
   turtle.forward(100)
turtle.up()
turtle.bk(20)
turtle.right(90)
turtle.fd(20)
turtle.left(90)
turtle.fd(20)
turtle.left(180)
turtle.down()

turtle.color('black')
turtle.shape('arrow')
for _ in range(4):
    turtle.forward(260)
    turtle.left(90)

   
# acrecentei cada um uma cor diferente.
# acrecentei cada uma diferente.
# eles não estão se batendo acrecentei no codigo
