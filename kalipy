#8
import turtle
import random

turtle = turtle.Turtle()
turtle.pensize(28)

colors = ['purple', 'blue', 'yellow', 'green', 'pink','orange', 'black']
for _ in range (10):
    color = random.choice(colors)
    turtle.color(color)
    turtle.forward(100)
    turtle.backward(100)
    turtle.right(45)


    #acrecentei orange, black.
    #turtle.pensize(28), fiz essa linha, que seria a largura.
    #for _ in range (10) estava 8 coloquei 10,fazendo ele colocar mais duas linhas.
