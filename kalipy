#3
'''
import turtle

turtle = turtle.Turtle()
turtle.shape('circle')
turtle.pensize(1)

for color in ['pink', 'red','blue' ,'black']:
    turtle.color(color)
    turtle.forward(140)
    turtle.right(90)
    turtle.forward(100)
    turtle.right(90)
    turtle.forward(100)
    turtle.forward(140)
    turtle.right(90)
'''

#4
'''
import turtle
import random

turtle = turtle.Turtle()
colors = ['green', 'yellow', 'blue','purple',]#tirei a cor vermelha.

for _ in [1, 2, 3,4,5]:
    color = random.choice(colors)
    turtle.color(color)
    turtle.right(120) #acrecentei essa linha, fazendo com que ele esteja apontando para cima.
    turtle.forward(180)#aumentei 80
    turtle.right(120)
'''

#5
'''
import turtle

turtle = turtle.Turtle()
turtle.color('red')

for _ in [1, 2, 3]:
    turtle.shape('arrow')#coloquei um seta como tartaruga
    turtle.forward(50)#diminuir para 50
    turtle.right(120)

for _ in [1, 2, 3, 4]:
  turtle.shape('square')#coloquei um quadrado como tartaruga
  turtle.forward(150)#aumentei 50
  turtle.right(90)
  turtle.forward(75)# acrecentei para ficar o mesmo tamanho a carta.
'''
  #6
'''
import turtle

turtle = turtle.Turtle()
turtle.color('green')

for _ in [1, 2, 3]:
    turtle.forward(100)
    turtle.right(120)

for _ in [1, 2, 3, 4]:
  turtle.forward(100)
  turtle.right(90)
  #coloquei o forward para cima e ao inves de ser left coloquei o right
'''

'''
#7
import turtle

turtle = turtle.Turtle()
turtle.color('green')

for _ in range(4):
    turtle.left(90)
    turtle.backward(75)

turtle.backward(100)
turtle.backward(100)
turtle.right(90)

for _ in range(3):
  turtle.forward(75)
  turtle.left(90)
  #diminuir o tamanho das lentes... para 75
  #aumentei para 100, deixando ele mais distante
